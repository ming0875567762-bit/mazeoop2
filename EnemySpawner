using UnityEngine;
using UnityEngine.AI;

public class EnemySpawner : MonoBehaviour
{
    [Header("Settings")]
    public GameObject enemyPrefab;
    public int numberOfEnemies = 5;
    public Vector2 mapSize = new Vector2(20, 20);

    // ลบ Start() ออกเลยครับ เพราะเราจะให้ MazeGenerator เป็นคนสั่ง
    // void Start() { SpawnEnemies(); } <--- ลบทิ้ง

    // ✅ ต้องเป็น public ถึงจะเรียกจาก MazeGenerator ได้
    public void SpawnEnemies()
    {
        for (int i = 0; i < numberOfEnemies; i++)
        {
            Vector3 spawnPosition = GetRandomValidPosition();
            if (spawnPosition != Vector3.zero)
            {
                Instantiate(enemyPrefab, spawnPosition, Quaternion.identity);
            }
        }
    }

    Vector3 GetRandomValidPosition()
    {
        for (int i = 0; i < 30; i++)
        {
            float randomX = Random.Range(-mapSize.x / 2, mapSize.x / 2);
            float randomZ = Random.Range(-mapSize.y / 2, mapSize.y / 2);
            Vector3 randomPoint = new Vector3(randomX, 0, randomZ);

            NavMeshHit hit;
            // เช็คว่าจุดนี้เดินได้จริงไหม (รัศมี 1.0f)
            if (NavMesh.SamplePosition(randomPoint, out hit, 1.0f, NavMesh.AllAreas))
            {
                return hit.position;
            }
        }
        return Vector3.zero;
    }
}
